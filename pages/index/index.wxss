/**index.wxss**/
page{
  margin: 16rpx 0;
}
.banner{
  width: 730rpx;
  margin: 0 auto;
}
.slide-image{
  height: 320rpx;
  width: 100%;
}
.grid{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  width: 730rpx;
  height: 280rpx;
  padding: 10rpx 0rpx;
  background: #fff;
  border: 1px solid #ccc;
  margin: 0 auto;
  margin-top: 40rpx;
}
.grid-higher{
  height: 432rpx;
}
.grid-320{
  height: 320rpx;
  padding: 0;
}
/* 列表 */
.grid-lists,.grid-game,.grid-huodong{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.grid-lists .grid-lists-item{
  display: flex;
  width: 144rpx;
  height: 128rpx; 
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.grid-lists .grid-lists-item image{
  width: 84rpx;
  height: 84rpx;
}
.grid-lists .grid-lists-item text{
  font-size: 24rpx;
}
/* game style */
.grid-game .grid-game-item{
  display: flex;
  width: 182rpx;
  height: 216rpx; 
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.game-pic{
  width: 120rpx;
  height: 120rpx;
}
.game-name{
  margin-top: 8rpx;
  width: 184;
  height: 64rpx;
  /* line-height: 64rpx; */
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
}
.grid-huodong:nth-of-type(1){
  border-bottom: 1px solid #ccc;
}
.grid-huodong-item{
  width: 345rpx;
  height: 160rpx;
  /* margin: 0 10rpx; */
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.grid-huodong-item:not(:nth-of-type(2n)){
  border-right: solid 1px #ccc;
}
.grid-huodong-text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* align-items: center; */
  width: 236rpx;
}
.grid-huodong-text text:nth-of-type(1){
  font-size: 22rpx;
}
.grid-huodong-text text:nth-of-type(2){
  font-size: 20rpx;
}
.grid-huodong-pic{
  height: 98rpx;
  width: 98rpx;
}