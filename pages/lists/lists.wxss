/* pages/lists/lists.wxss */
.game-lists{
  width: 100%;
  padding: 10rpx;
  background: #fff;
}
.game-list-item:not(:last-of-type){
  height: 188rpx;
  margin: 18rpx auto;
  border-bottom: 1px solid #ccc;
}
/* title */
.game-list-title{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 720rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  display:-webkit-box; 
  overflow: hidden;
  word-wrap: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.game-sub-title{
  font-size: 24rpx;
  color: #4190e9;
  margin-left: 10rpx;
}
.game-list-info{
  display: flex;
  flex-direction: row;
  /* height: 32rpx; */
  /* line-height: 32rpx; */
}
/* 游戏列表下面的 view,用于包裹每行的内容 */
.game-list-info view{
  display: flex;
  height: 44rpx;
  line-height: 44rpx;
  align-self: center;
  margin-right: 30rpx;
  position: relative;
}
/* 用于生成间隔符 */
.game-list-info view:not(:last-of-type)::after{
  content: "";
  position: absolute;
  top: 8rpx;
  right: -15rpx;
  width: 1px;
  height: 24rpx;
  background: #999;
}
.game-list-price{
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
  color:#f00;
}
/* 内容颜色,字体 */
.game-info-mainfont{
  font-size: 24rpx;
  color: #999;
}
/* 公共样式,用于账号,金币等类型的CSS */
.title-type{
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  padding:0rpx 4rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
}
/* 账号 */
.title-type-zhanghao{
  background-color: #FF6699;
}
/* 首冲 */
.title-type-shou{
  background-color: #3DA7F2;
}
/* 金币 */
.title-type-bi{
  background-color: #FFA800;
}
.rate-color-star{
  color: #FFA800;
}
/* 代练 */
.title-type-lian{
  background-color: #FFA800;
}